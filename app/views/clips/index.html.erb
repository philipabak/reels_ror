<div class="row p-3">
  <h2>All Clips</h2>

  <table class="table table-hover table-responsive table-bordered">
    <tr class="table-light">
      <th>Name</th>
      <th>Description</th>
      <th>Video Standard</th>
      <th>Video Definition</th>
      <th>Start Time</th>
      <th>End Time</th>
    </tr>
    <% @clips.each do |clip| %>
      <tr>
        <td><%= clip.name %></td>
        <td><%= clip.description %></td>
        <td><%= clip.video_standard %></td>
        <td><%= clip.video_definition %></td>
        <td><%= clip.start_time %></td>
        <td><%= clip.end_time %></td>
      </tr>
    <% end %>
  </table>
</div>